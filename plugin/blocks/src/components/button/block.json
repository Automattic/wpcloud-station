{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wpcloud/button",
	"version": "0.1.0",
	"title": "WP Cloud Button",
	"category": "wpcloud",
	"icon": "button",
	"description": "WP Cloud Actionable button",
	"supports": {
		"html": false
	},
	"textdomain": "wpcloud",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js",
	"attributes": {
		"type": {
			"type" : "string",
			"default": "link"
		},
		"style": {
			"type": "string",
			"default": "button"
		},
		"label": {
			"type": "string"
		},
		"isPrimary": {
			"type": "boolean",
			"default": true
		},
		"adminOnly": {
			"type": "boolean",
			"default": false
		},
		"addIcon": {
			"type": "boolean",
			"default": false
		},
		"iconOnly": {
			"type": "boolean",
			"default": false
		},
		"url": {
			"type": "string",
			"default": ""
		},
		"target": {
			"type": "string",
			"default": "_self"
		},
		"action": {
			"type": "string",
			"default": ""
		},
		"name": {
			"type": "string",
			"default": ""
		},
		"refresh": {
			"type": "boolean",
			"default": false
		}
	}
}
