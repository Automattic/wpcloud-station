{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "wpcloud/site-detail",
	"version": "0.1.0",
	"title": "Site Detail",
	"category": "wpcloud",
	"icon": "info-outline",
	"description": "The Site Detail block displays a name-value pair for a site detail. The gray italic text is just a placeholder for the actual site detail value.",
	"example": {},
	"supports": {
		"html": false
	},
	"textdomain": "site-detail",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js",
	"usesContext": [ "wpcloud/layout" ],
	"attributes": {
		"label": {
			"type": "string",
			"default": "label"
		},
		"name": {
			"type": "string",
			"default": ""
		},
		"adminOnly": {
			"type": "boolean",
			"default": false
		},
		"inline": {
			"type": "boolean",
			"default": false
		},
		"hideLabel": {
			"type": "boolean",
			"default": false
		},
		"showCopyButton": {
			"type": "boolean",
			"default": false
		},
		"obscureValue": {
			"type": "boolean",
			"default": false
		},
		"revealButton": {
			"type": "boolean",
			"default": true
		}
	}
}
